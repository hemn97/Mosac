<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="114dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp">
        <ImageView
            android:background="@drawable/item_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/type"
                    android:src="@drawable/study"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />

                <TextView
                    android:id="@+id/teamname"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/type"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="MY TEAM NAME"
                    android:textColor="@color/textLevel1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/captainname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_alignStart="@+id/teamname"
                    android:layout_below="@+id/teamname"
                    android:textSize="16sp"
                    android:textColor="@color/textLevel2"
                    android:text="CAPTAIN" />

                <ImageView
                    android:src="@drawable/number"
                    android:layout_toStartOf="@id/number"
                    android:layout_alignTop="@id/number"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/number"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignTop="@+id/teamname"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/textLevel2"
                    android:text="999/999" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/time_pic"
                    android:src="@drawable/time"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="4dp"
                    android:layout_toEndOf="@+id/time_pic"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/textLevel2"
                    android:text="2018/1/1 Monday" />

                <ImageView
                    android:id="@+id/location_pic"
                    android:src="@drawable/location"
                    android:layout_alignTop="@+id/place"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/place"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/time"
                    android:layout_alignStart="@+id/time"
                    android:gravity="center_vertical"
                    android:textColor="@color/textLevel2"
                    android:text="IN SCHOOL" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>